{
    "compilerOptions": {
        "allowJs": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "module": "ES2020",
        "target": "ES2020",
        "outDir": "dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationMap": true,
        "removeComments": false,
        "skipLibCheck": true,
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": ["src"],
}